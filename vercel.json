{
  "version": 2,
  "builds": [
    {
      "src": "api/summarize.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/summarize",
      "dest": "/api/summarize.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 